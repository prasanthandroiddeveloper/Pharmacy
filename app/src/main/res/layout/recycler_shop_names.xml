<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">



        <TextView
            android:id="@+id/shopnametv"
            android:drawableLeft="@drawable/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000"
            android:drawablePadding="20dp"
            android:padding="5dp"
            android:text="Sri Venkateswara Medicals Shop"
            android:fontFamily="@font/poppins_bold">
        </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/CnctNumTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9393939150"
            android:drawableLeft="@drawable/phone"
            android:textStyle="bold"
            android:gravity="start"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/CnctNumTv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9885463579"
            android:drawableLeft="@drawable/phone"
            android:textStyle="bold"
            android:gravity="start"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="LandMark :"
                android:textStyle="bold"
                android:gravity="start"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:layout_weight="1.3"/>


            <TextView
                android:id="@+id/LandmarkTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Near Ramana Load Checkpost"
                android:textStyle="bold"
                android:gravity="start"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:layout_weight="4"/>


        </LinearLayout>











        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/background_box">

        <TextView
            android:id="@+id/addressTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000"
            android:text="Door No:101/102-C,Gandhi Road,Mangalam,Tirupathi,
            Andhra Pradesh,Chittor"
            android:fontFamily="@font/poppins_regular"
            android:padding="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_weight="1"/>

        <TextView
            android:id="@+id/viewMapTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:textColor="#000"
            android:drawablePadding="5dp"
            android:text="View On Map"
            android:drawableLeft="@drawable/addrss"
            android:fontFamily="@font/poppins_regular"
            android:layout_weight="2"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_weight="1"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>